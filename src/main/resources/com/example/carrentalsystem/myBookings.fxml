<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" fillWidth="false" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.MyBookingsController">
    <!-- Table to display rental information -->
    <TableView fx:id="rentalTable" prefHeight="800.0" prefWidth="1000.0">
        <columns>
            <TableColumn fx:id="carNameColumn" prefWidth="226.0" text="Car Name" />
            <TableColumn fx:id="customerNameColumn" prefWidth="224.0" text="Customer Name" />
            <TableColumn fx:id="startDateColumn" prefWidth="179.0" text="Start Date" />
            <TableColumn fx:id="endDateColumn" prefWidth="210.0" text="End Date" />
            <TableColumn fx:id="rentalDaysColumn" prefWidth="160.0" text="Rental Days" />
        </columns>
    </TableView>

    <!-- Back Button -->
    <Button onAction="#handleBack" prefWidth="150.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Back" />
</VBox>
