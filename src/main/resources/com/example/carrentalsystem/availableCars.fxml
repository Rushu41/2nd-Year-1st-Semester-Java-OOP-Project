                <TableColumn fx:id="carNameColumn" prefWidth="300.0" text="Car Name" />
                <TableColumn fx:id="carTypeColumn" prefWidth="300.0" text="Fuel Type" />
<!--                <TableColumn fx:id="carSeatsColumn" text="Seats" prefWidth="200.0" />-->
                <TableColumn fx:id="priceColumn" prefWidth="300.0" text="Rent Price" />
            </columns>
        </TableView>
        <HBox layoutX="300.0" layoutY="500.0" spacing="20.0" />
          <Button layoutX="28.0" layoutY="488.0" onAction="#handleBack" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Back" />
          <Button layoutX="846.0" layoutY="488.0" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
    </children>
</AnchorPane>
