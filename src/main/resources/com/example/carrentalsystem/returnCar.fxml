                <TableColumn fx:id="customerNameColumn" prefWidth="200.0" text="Customer Name" />
            </columns>
        </TableView>

        <HBox layoutX="300.0" layoutY="500.0" spacing="20.0" />
          <Button layoutX="140.0" layoutY="502.0" onAction="#handleReturnCar" text="Return Car" />
          <Button layoutX="600.0" layoutY="502.0" onAction="#handleBack" text="Back" />
    </children>
</AnchorPane>
