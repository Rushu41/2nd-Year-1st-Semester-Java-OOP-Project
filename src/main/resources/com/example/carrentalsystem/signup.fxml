<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #ff7e5f, #feb47b);"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.carrentalsystem.SignupController">

    <VBox alignment="CENTER" layoutX="350.0" layoutY="100.0" prefHeight="500.0" prefWidth="300.0" spacing="15">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #ffffff;" text="Sign Up"/>

        <!-- User Input Fields -->
        <TextField fx:id="userIdField" promptText="User ID" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <TextField fx:id="firstNameField" promptText="First Name" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <TextField fx:id="lastNameField" promptText="Last Name" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <TextField fx:id="ageField" promptText="Age" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <ComboBox fx:id="genderComboBox" promptText="Select Gender"
                  style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;" />

        <!-- Date of Birth Field -->
        <DatePicker fx:id="dateOfBirthPicker" promptText="Date of Birth" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>

        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <PasswordField fx:id="passwordField" promptText="Enter Password" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-radius: 15; -fx-padding: 10; -fx-pref-width: 300;"/>

        <!-- Signup Button -->
        <Button fx:id="signupButton" onAction="#handleSignup" text="Sign Up"
                style="-fx-background-color: #ff7e5f; -fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 10 20;"/>

        <!-- Status Message -->
        <Label fx:id="statusLabel" text="" style="-fx-text-fill: white;"/>
    </VBox>
</AnchorPane>
