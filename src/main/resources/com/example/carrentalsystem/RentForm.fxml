<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.carrentalsystem.RentFormController"
      alignment="CENTER" spacing="15" style="-fx-padding: 40;" prefWidth="1000.0" prefHeight="800.0">

    <!-- Title Labels -->
    <Label fx:id="carNameLabel" text="Car: " style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="usernameLabel" text="User: " style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Date Pickers -->
    <DatePicker fx:id="startDatePicker" promptText="Start Date" style="-fx-pref-width: 250;"/>
    <DatePicker fx:id="endDatePicker" promptText="End Date" style="-fx-pref-width: 250;"/>

    <!-- Radio Buttons for Rental Type -->
    <HBox spacing="20" alignment="CENTER">
        <RadioButton fx:id="hourlyRadioButton" text="Rent Hourly" selected="true"/>
        <RadioButton fx:id="dailyRadioButton" text="Rent Daily"/>
    </HBox>

    <!-- Rent Button -->
    <Button fx:id="rentButton" text="Rent Car" onAction="#rentCar" style="-fx-background-color: #ff7e5f; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;"/>
</VBox>
