<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.AddCarController">
    <children>
        <!-- Input Fields Section -->
        <TextField fx:id="carNameField" layoutX="20.0" layoutY="30.0" promptText="Car Name" prefWidth="300.0" />
        <TextField fx:id="totalSeatsField" layoutX="20.0" layoutY="80.0" promptText="Total Seats" prefWidth="300.0" />
        <TextField fx:id="fuelTypeField" layoutX="20.0" layoutY="130.0" promptText="Fuel Type" prefWidth="300.0" />
        <TextField fx:id="rentPriceField" layoutX="20.0" layoutY="180.0" promptText="Rent Price per Day" prefWidth="300.0" />

        <!-- Upload Image Section -->
        <Button fx:id="uploadImageButton" layoutX="20.0" layoutY="230.0" text="Upload Image" onAction="#handleImageUpload" prefWidth="300.0" />
        <Label fx:id="errorLabel" layoutX="20.0" layoutY="270.0" text="" style="-fx-text-fill: red; -fx-font-size: 14px;" />

        <!-- Preview of Uploaded Image -->
        <ImageView fx:id="carImageView" layoutX="350.0" layoutY="30.0" fitWidth="250.0" fitHeight="200.0" preserveRatio="true" style="-fx-border-color: gray;" />

        <!-- Add Car Button -->
        <Button layoutX="20.0" layoutY="310.0" text="Add Car" onAction="#handleAddCar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" prefWidth="300.0" />

        <!-- Navigation Buttons -->
        <HBox layoutX="20.0" layoutY="360.0" spacing="20.0">
            <Button text="Back" onAction="#handleBack" style="-fx-background-color: #2196F3; -fx-text-fill: white;" prefWidth="140.0" />
            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" prefWidth="140.0" />
        </HBox>
    </children>
</AnchorPane>
