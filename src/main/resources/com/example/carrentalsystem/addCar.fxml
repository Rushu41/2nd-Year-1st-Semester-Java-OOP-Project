<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.AddCarController" stylesheets="@styles.css" prefWidth="800.0" prefHeight="600.0">
    <children>
        <!-- Input Fields Section -->
        <Label layoutX="20.0" layoutY="10.0" text="Add Car" styleClass="header-label" />
        <TextField fx:id="carNameField" layoutX="20.0" layoutY="50.0" promptText="Car Name" prefWidth="300.0" styleClass="input-field" />
        <TextField fx:id="totalSeatsField" layoutX="20.0" layoutY="100.0" promptText="Total Seats" prefWidth="300.0" styleClass="input-field" />
        <TextField fx:id="fuelTypeField" layoutX="20.0" layoutY="150.0" promptText="Fuel Type" prefWidth="300.0" styleClass="input-field" />
        <TextField fx:id="rentPriceField" layoutX="20.0" layoutY="200.0" promptText="Rent Price per Day" prefWidth="300.0" styleClass="input-field" />

        <!-- Upload Image Section -->
        <Button fx:id="uploadImageButton" layoutX="20.0" layoutY="250.0" onAction="#handleImageUpload" prefWidth="300.0" styleClass="upload-button">
            <graphic>
                <FontAwesomeIconView glyphName="UPLOAD" size="16" />
            </graphic>
            Upload Image
        </Button>
        <Label fx:id="errorLabel" layoutX="20.0" layoutY="290.0" text="" styleClass="error-label" />

        <!-- Preview of Uploaded Image -->
        <ImageView fx:id="carImageView" layoutX="350.0" layoutY="50.0" fitWidth="250.0" fitHeight="200.0" preserveRatio="true" styleClass="image-preview" />

<!--        &lt;!&ndash; Display Car Name &ndash;&gt;-->
<!--        <Label fx:id="carNameLabel" layoutX="350.0" layoutY="270.0" text="Car's Name:" styleClass="car-name-label" />-->

        <!-- Add Car Button -->
        <Button layoutX="20.0" layoutY="330.0" onAction="#handleAddCar" styleClass="add-button" prefWidth="300.0">
            <graphic>
                <FontAwesomeIconView glyphName="PLUS" size="16" />
            </graphic>
            Add Car
        </Button>

        <!-- Navigation Buttons -->
        <HBox layoutX="20.0" layoutY="380.0" spacing="20.0">
            <Button onAction="#handleBack" styleClass="nav-button">
                <graphic>
                    <FontAwesomeIconView glyphName="ARROW_LEFT" size="16" />
                </graphic>
                Back
            </Button>
            <Button onAction="#handleLogout" styleClass="nav-button">
                <graphic>
                    <FontAwesomeIconView glyphName="SIGN_OUT" size="16" />
                </graphic>
                Logout
            </Button>
        </HBox>
    </children>
</AnchorPane>
