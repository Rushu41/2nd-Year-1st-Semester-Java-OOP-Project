<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carrentalsystem.DashboardController" prefHeight="800.0" prefWidth="1000.0">
    <children>
        <!-- Sidebar -->
        <VBox layoutX="0.0" layoutY="0.0" prefHeight="800.0" prefWidth="250.0" style="-fx-background-color: #2b2b2b;">
            <children>
                <ImageView fitHeight="120.0" fitWidth="120.0" layoutX="65.0" layoutY="10.0">
                    <image>
                        <Image url="@images/car.jpg" />
                    </image>
                </ImageView>
                <Label text="Welcome, Admin" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 10 0 20 0;" />
                <Button text="Available Cars" onAction="#handleAvailableCars" style="-fx-background-color: #4caf50; -fx-text-fill: white;" prefWidth="220.0" />
                <Button text="Add Car" onAction="#handleAddCar" style="-fx-background-color: #4caf50; -fx-text-fill: white;" prefWidth="220.0" />
                <Button text="Return Car" onAction="#handleReturnCar" style="-fx-background-color: #4caf50; -fx-text-fill: white;" prefWidth="220.0" />
                <Button text="Active Customers" onAction="#handleActiveCustomer" style="-fx-background-color: #4caf50; -fx-text-fill: white;" prefWidth="220.0" />
                <Button text="Feedback" onAction="#handleFeedback" style="-fx-background-color: #4caf50; -fx-text-fill: white;" prefWidth="220.0" />
                <Button layoutX="250.0" layoutY="300.0" text="Logout" onAction="#handleLogout" />

            </children>
        </VBox>

        <!-- Main Content Area -->
        <AnchorPane layoutX="250.0" layoutY="0.0" prefHeight="800.0" prefWidth="750.0" style="-fx-background-color: #f4f4f4;">
            <!-- Additional content can be added here -->
        </AnchorPane>
    </children>
</AnchorPane>
